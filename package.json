{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run --r --filter \"./packages/**\" build",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm bun ./scripts/updateVersion.ts",
    "clean": "pnpm run --r --parallel clean",
    "deps": "pnpx taze -r",
    "dev": "pnpm dev:vite-react",
    "dev:vite-core": "pnpm --filter vite-core dev",
    "dev:vite-react": "pnpm --filter vite-react dev",
    "docs:dev": "rimraf node_modules/.cache/twoslash && pnpm --filter docs dev",
    "format": "biome format . --write",
    "lint": "biome check .",
    "lint:fix": "pnpm lint --apply",
    "lint:unused": "pnpm clean && knip",
    "postinstall": "pnpm preconstruct",
    "preconstruct": "bun .scripts/preconstruct.ts",
    "preinstall": "npx only-allow@1.1.1 pnpm",
    "prepare": "pnpm simple-git-hooks",
    "prepublishOnly": "bun .scripts/formatPackageJson.ts",
    "test": "vitest",
    "test:build": "pnpm run --r --parallel test:build",
    "test:cov": "vitest --coverage",
    "test:typecheck": "vitest typecheck",
    "test:ui": "vitest --ui",
    "test:ui:cov": "vite preview --outDir ./coverage",
    "test:update": "vitest --update",
    "test:update:viem": "bun .scripts/updateViemTestSnapshotVersion.ts",
    "typecheck": "pnpm run --r --parallel typecheck && tsc --noEmit",
    "version:update": "bun .scripts/updateVersion.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.1.2",
    "@changesets/changelog-github": "0.4.6",
    "@changesets/cli": "^2.26.0",
    "@viem/anvil": "0.0.6",
    "@vitest/coverage-v8": "^0.34.1",
    "@vitest/ui": "^0.34.1",
    "@wagmi/test": "workspace:*",
    "bun": "^1.0.0",
    "bun-types": "^1.0.1",
    "glob": "^10.3.4",
    "jsdom": "^20.0.3",
    "knip": "^2.17.3",
    "publint": "^0.2.0",
    "rimraf": "^4.4.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "5.1.6",
    "viem": "0.0.0-alpha-20230911171150",
    "vite": "^4.3.9",
    "vitest": "^0.34.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint:fix"
  },
  "packageManager": "pnpm@8.7.5",
  "pnpm": {
    "overrides": {
      "@wagmi/connectors": "workspace:*",
      "@wagmi/core": "workspace:*",
      "viem": "0.0.0-alpha-20230911171150"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "esbuild",
        "react",
        "search-insights"
      ]
    }
  },
  "knip": {
    "ignore": ["**/*.test-d.ts", "**/vite-env.d.ts", "vitest.workspace.ts"],
    "ignoreBinaries": ["biome"],
    "ignoreDependencies": ["@biomejs/biome", "@changesets/cli", "only-allow"],
    "ignoreWorkspaces": ["docs", "packages/register-tests/**"],
    "workspaces": {
      ".": {
        "entry": ".scripts/*.ts"
      },
      "packages/core": {
        "entry": "src/exports/{chains,index,internal,query}.ts!"
      },
      "packages/react": {
        "entry": "src/exports/{actions,chains,connectors,index,query}.ts!"
      },
      "packages/test": {
        "entry": [
          "src/{globalSetup,setup}.ts!",
          "src/exports/{index,react}.ts!"
        ]
      }
    }
  }
}
